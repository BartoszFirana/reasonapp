{
    "extends": ["react-app", "prettier", "prettier/react"],
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest": true
    },
    "ecmaFeatures": {
        "modules": true,
        "spread": true,
        "restParams": true,
        "jsx": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["*"]
            }
        }
    },
    "plugins": ["react", "react-hooks"]
}
